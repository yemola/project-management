{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "rootDir": "./src",
      "strict": false,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "CommonJS",
      "resolveJsonModule": false,
      "isolatedModules": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
    "exclude": ["node_modules"]
  }
  